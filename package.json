{
  "name": "creator-platform-be",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "deploy": "firebase deploy --only functions -P default",
    "deploy:staging":"firebase deploy --only functions -P staging",
    "check": "npx prettier ./src --check",
    "format": "npx prettier ./src --write",
    "lint": "npx eslint . --ext .js",
    "test": "cross-env PORT=5000 mocha 'src/tests/**/*.test.js'",
    "test:coverage": "nyc --reporter=lcov --reporter=text mocha --require @babel/polyfill --require @babel/register 'src/tests/**/*.test.js' --timeout 500000000 --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "src/tests"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": false,
    "check-coverage": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "require": [
      "@babel/register"
    ]
  },
  "author": "Bizimungu Pascal",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/node": "^7.23.9",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.24.0",
    "@babel/register": "^7.23.7",
    "chai": "^5.1.1",
    "chai-http": "^5.0.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "esm": "^3.2.25",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "nyc": "^17.0.0",
    "sinon": "^18.0.0"
  },
  "dependencies": {
    "@firebase/storage": "^0.12.2",
    "@google-cloud/storage": "^7.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.3",
    "express-fileupload": "^1.5.0",
    "express-rate-limit": "^7.2.0",
    "firebase": "^10.9.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.1",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13",
    "prettier": "^3.2.5",
    "stripe": "^15.8.0",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": "18"
  }
}
